@model Klimatkollen.Models.Observation
@{
    ViewData["Title"] = "ReportObservationView";
}

<h1>Rapportera en Observation</h1>
<h1>Vald kategori: @Model.MainCategory.CategoryName</h1>





@using (Html.BeginForm("AddObservation", "ReportObservation", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

<div class="form-group">
    @Html.LabelFor(m => m.Date, "Datum", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    @Html.LabelFor(m => m.Longitude, "Longitude", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Longitude, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.LabelFor(m => m.Latitude, "Latitude", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Latitude, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    @Html.LabelFor(m => m.Comment, "Kommentar", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    @Html.LabelFor(m => m.MainCategory, "Kommentar", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.MainCategory.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary mt-5 mr-2" value="Register" />
        </div>
    </div>
</div>
}


