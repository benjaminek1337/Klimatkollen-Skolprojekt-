@model Klimatkollen.Models.Person

@{
    ViewBag.Title = "Fyll i användarinformation";
}

<h1>Fyll i användarinformation</h1>
<hr />
<div id="editUserInfo">
    <form method="post">
        @Html.AntiForgeryToken()

        <div class="form-group row">
            <label class="col-sm-2 col-form-label" >Förnamn:</label>
            <div class="col-sm-10">
                <input class="form-control" required type="text" asp-for="@Model.FirstName" value="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label" >Efternamn:</label>
            <div class="col-sm-10">
                <input class="form-control" required type="text" asp-for="@Model.Lastname" value="@Model.Lastname" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
        </div>
        <input type="hidden" asp-for="@Model.IdentityId" value="@Model.IdentityId" />
        <input type="hidden" asp-for="@Model.Id" value="@Model.Id" />
        <input type="hidden" asp-for="@Model.Email" value="@Model.Email" />
        <div asp-validation-summary="All" class="text-danger"></div>
        <button class="btn btn-primary" asp-action="EditUserProfile" asp-controller="Profile">Ändra info</button>
    </form>
</div>