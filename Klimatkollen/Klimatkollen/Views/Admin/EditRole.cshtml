@model Klimatkollen.ViewModels.EditRoleViewModel

@{ 
    ViewBag.Title = "Ändra systemroll";
}

    <h1>Ändra systemroll</h1>

    <form method="post" class="mt-3">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Uppdatera</button>
                <a asp-action="ListRoles" class="btn btn-outline-primary">Avbryt</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Användare</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <p>@user</p>
                    }
                }
                else
                {
                    <h4>Det finns inga användare i denna roll</h4>
                }
            </div>
            <div class="card-footer">
                <a asp-action="EditUserRole" asp-controller="Admin" asp-route-id="@Model.Id" class="btn btn-primary">Lägg till eller ta bort användare</a>

            </div>
        </div>
    </form>