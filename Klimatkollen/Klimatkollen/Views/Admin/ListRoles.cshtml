@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "Hantera systemroller";
}

<h1>Hantera systemroller</h1>
<br />

@if (Model.Any())
{
    foreach (var role in Model)
    {
        if (role.Name != "grupp1superadmin")
        {

            <h3>@role.Name</h3>

            <p>Systemroll ID: @role.Id</p>
            <a class="btn btn-outline-primary" asp-action="EditRole" asp-controller="Admin" asp-route-id="@role.Id">Ändra</a>
            <a class="btn btn-danger" asp-action="DeleteRole" asp-controller="Admin" asp-route-id="@role.Id">Radera</a>
            <hr />
        }

    }
    <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">Lägg till en systemroll</a>
}

else
{

    <h3>Det finns inga systemroller registrerade</h3>

    <h5 class="card-title">
        Du kan skapa en systemroll genom knappen nedan
    </h5>
    <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">
        Skapa en systemroll
    </a>
}
