@model List<Klimatkollen.ViewModels.UserRoleViewModel>

@{
    var userName = ViewBag.userName;
    var userId = ViewBag.userId;
    ViewBag.Title = "Lägg till/ta bort systembehörighet från användare";
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Lägg till/ta bort systembehörighet från @userName</h2>
        </div>
        <div class="card-body">
            <p>Välj systembehörighet att lägga till/ta bort från @userName</p>
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" class="btn btn-primary" value="Uppdatera listan" />
            <a asp-action="EditUser" asp-route-id="@userId" class="btn btn-outline-primary">Tillbaka</a>
        </div>
    </div>
</form>